{
  "compilerOptions": {
    "target": "es2020",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "declaration": false
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src"],
  "compileOnSave": false,
  "compileOnSaveEmit": false,
  "compileOnSaveDefineCompileDependencies": true
}
